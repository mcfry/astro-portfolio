---
import Base from '@/templates/Base.astro';
import { AppConfig } from '@/utils/AppConfig';

const { title } = AppConfig;
const { description } = AppConfig;
---

<Base head={{ title, description }}>
  <div class='flex flex-col items-center justify-center py-20'>
    <form
      class='z-20 w-10/12 sm:w-9/12 md:w-6/12 lg:w-5/12 xl:w-4/12 2xl:w-3/12 space-y-4'
      method='POST'
      data-netlify='true'
      netlify-honeypot='bot-field'
    >
      <div class='hidden'>
        <label>
          Don't fill this out if you're human: <input name='bot-field' />
        </label>
      </div>
      <div>
        <label class='label'>
          <span class='label-text w-full text-base font-bold text-white'
            >Name
          </span>
        </label>
        <input
          type='text'
          placeholder='Name'
          name='name'
          class='input input-bordered w-full text-slate-900'
        />
      </div>
      <div>
        <label class='label'>
          <span class='label-text w-full text-base font-bold text-white'
            >Email
          </span>
        </label>
        <input
          type='text'
          placeholder='Email Address'
          name='email'
          class='input input-bordered w-full text-slate-900'
        />
      </div>
      <div>
        <label class='label'>
          <span class='label-text w-full text-base font-bold text-white'
            >Message
          </span>
        </label>
        <textarea
          placeholder='Enter message'
          name='message'
          class='textarea textarea-md w-full text-slate-900'></textarea>
      </div>
      <div>
        <button class='btn btn-block' type='submit'>Send</button>
      </div>
    </form>
  </div>
</Base>
